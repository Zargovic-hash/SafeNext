
# .env Frontend (à placer dans le dossier frontend/client)

# URL de l'API Backend
# En développement local
REACT_APP_API_URL=http://localhost:3001/api

# En production (décommentez et adaptez selon votre déploiement)
# REACT_APP_API_URL=https://votre-backend-url.com/api

# Configuration de build
GENERATE_SOURCEMAP=false

# Timeout pour les requêtes (optionnel)
REACT_APP_REQUEST_TIMEOUT=10000

# Variables pour le développement
REACT_APP_DEBUG=false